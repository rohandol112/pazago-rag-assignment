# Copy this file to .env and fill in your actual API keys
# DO NOT commit the .env file with real keys to GitHub!

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration for Mastra (using SQLite)
DATABASE_URL=file:./berkshire-rag.db
PGVECTOR_TABLE_NAME=berkshire_documents

# Alternative: SQLite for local development (no PostgreSQL needed)
SQLITE_DB_PATH=./berkshire-rag.db

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=berkshire-hathaway-rag
PINECONE_ENVIRONMENT=us-east-1-aws